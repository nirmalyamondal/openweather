<sheets>

<rDEF>
	<ROOT>
	<TCEforms>
		<sheetTitle>Général Settings</sheetTitle>
	</TCEforms>
	<type>array</type>
	<el>

		<switchableControllerActions>
			<TCEforms>
				<label>LLL:EXT:openweather/Resources/Private/Language/locallang.xlf:flexforms.whattoshow</label>
				<config>
					<type>select</type>
					<renderType>selectSingle</renderType>
					<items>
						<numIndex index="0" type="array">
							<numIndex index="0">LLL:EXT:openweather/Resources/Private/Language/locallang.xlf:flexforms.current</numIndex>
							<numIndex index="1">Weathershow->current</numIndex>
						</numIndex>
						<numIndex index="1">
